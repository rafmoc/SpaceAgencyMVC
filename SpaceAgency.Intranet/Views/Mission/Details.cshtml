@model SpaceAgency.Intranet.TwoViews.TwoViewsAtOnce

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-body">
        <h1>Details</h1>

        <div>
            <h4>Mission</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Mission.Name)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Mission.Name)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Mission.Destination)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Mission.Destination)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Mission.Type)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Mission.Type)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Mission.Status)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Mission.Status)
                </dd>
            </dl>
        </div>
    </div>
</div>