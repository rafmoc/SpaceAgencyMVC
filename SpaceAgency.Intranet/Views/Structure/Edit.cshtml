@model SpaceAgency.Intranet.TwoViews.TwoViewsAtOnce

@{
    ViewData["Title"] = "Edit";
}
<div class="card">
    <div class="card-body">

        <h1>Edit</h1>

        <h4>Structure</h4>

        <form asp-action="Edit" asp-route-id="@Model.Structure.IdStructure">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Structure.IdStructure" />
            <div class="form-group">
                <label asp-for="Structure.Name" class="control-label"></label>
                <input asp-for="Structure.Name" class="form-control" />
                <span asp-validation-for="Structure.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Structure.Type" class="control-label"></label>
                <input asp-for="Structure.Type" class="form-control" />
                <span asp-validation-for="Structure.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Structure.Planet" class="control-label"></label>
                <input asp-for="Structure.Planet" class="form-control" />
                <span asp-validation-for="Structure.Planet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Structure.Latitude" class="control-label"></label>
                <input asp-for="Structure.Latitude" class="form-control" />
                <span asp-validation-for="Structure.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Structure.Longitude" class="control-label"></label>
                <input asp-for="Structure.Longitude" class="form-control" />
                <span asp-validation-for="Structure.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Structure.Status" class="control-label"></label>
                <input asp-for="Structure.Status" class="form-control" />
                <span asp-validation-for="Structure.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
