@model SpaceAgency.Intranet.TwoViews.TwoViewsAtOnce

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <h1>Create</h1>

        <h4>Page</h4>
        <hr />
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Page.Title" class="control-label"></label>
                    <input asp-for="Page.Title" class="form-control" />
                    <span asp-validation-for="Page.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Page.Header" class="control-label"></label>
                    <input asp-for="Page.Header" class="form-control" />
                    <span asp-validation-for="Page.Header" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Page.TopContent" class="control-label"></label>
                    <input asp-for="Page.TopContent" class="form-control" />
                    <span asp-validation-for="Page.TopContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Page.BotContent" class="control-label"></label>
                    <input asp-for="Page.BotContent" class="form-control" />
                    <span asp-validation-for="Page.BotContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
